rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper to validate expense data structure
    function isValidExpense() {
      let expense = request.resource.data;
      return expense.keys().hasAll(['amount', 'category', 'date', 'item', 'userId']) &&
             expense.amount is number &&
             expense.category is string &&
             expense.date is string &&
             expense.item is string &&
             expense.item.size() > 0 &&
             expense.item.size() < 100 &&
             expense.userId == request.auth.uid;
    }

    // Deny read/write by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection (if you have one, though app usage suggests expenses are top-level or queries)
    // Based on storageService.ts, expenses seem to be query-based.
    // Let's look at how expenses are stored.
    // storageService.ts uses: collection(db, 'expenses')

    match /expenses/{expenseId} {
      // Allow read if userId field matches auth.uid
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Allow create if userId matches auth.uid and data is valid
      allow create: if isAuthenticated() && isValidExpense();

      // Allow update/delete if user owns the document
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
